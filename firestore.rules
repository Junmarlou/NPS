rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /nps_responses/{document=**} {
      // Allow anyone to read (for dashboard) and create (for survey)
      allow read, create: if true;
      
      // Prevent editing or deleting responses once submitted
      allow update, delete: if false;

      // Optional: Add data validation
      // allow create: if request.resource.data.globalNPS >= 0 
      //               && request.resource.data.globalNPS <= 10
      //               && request.resource.data.keys().hasAll(['month', 'year', 'categories']);
    }
  }
}
